public class TeaMaker {

    
    private TeaStock teaBag;
    private boolean withSugar;
    private String topping;
    private static int amountOfDrinks; 
    
    public TeaMaker(TeaStock teaBag, boolean withSugar, String topping){
        teaBag = new TeaStock(teaBag.getName(), teaBag.getTeaStock(), getSugarStock());
        this.withSugar = withSugar;
        this.topping = topping;
        amountOfDrinks = 0;
    }
}
